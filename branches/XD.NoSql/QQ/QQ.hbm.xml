<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="XD.QQ" assembly="XD.NoSql">
  <class name="Actor" table="QQ_Actor"  lazy="false">
    <!--表主键用id，数据库表的其他字段用property-->
    <id name="Id">
      <column name="Id" sql-type="bigint" not-null="true"/>
      <generator class="assigned" />
    </id>
    <property name="Uin">
      <column name="Uin" sql-type="nvarchar(480)" not-null="false"/>
    </property>
    <property name="District">
      <column name="District" sql-type="int" not-null="true"/>
    </property>
    <property name="Sex">
      <column name="Sex" sql-type="int" not-null="true"/>
    </property>
    <property name="Age">
      <column name="Age" sql-type="int" not-null="true"/>
    </property>
    <property name="Title">
      <column name="Title" sql-type="int" not-null="true"/>
    </property>
    <property name="Name">
      <column name="Name" sql-type="nvarchar(480)" not-null="false"/>
    </property>
    <property name="Photo">
      <column name="Photo" sql-type="nvarchar(480)" not-null="false"/>
    </property>
    <property name="State">
      <column name="State" sql-type="int" not-null="false"/>
    </property>
  </class>
</hibernate-mapping>
