<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="XD.Study" assembly="XD.Study">
  <class name="Actor" table="Actor"  lazy="false">
    <!--表主键用id，数据库表的其他字段用property-->
    <id name="Id">
      <column name="Id" sql-type="bigint" not-null="true"/>
      <generator class="assigned" />
    </id>
    <property name="Name">
      <column name="Name" sql-type="nvarchar(480)" not-null="false"/>
    </property>
    <property name="Password">
      <column name="Password" sql-type="nvarchar(480)" not-null="false"/>
    </property>
  </class>
</hibernate-mapping>
